<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/AddOns/Blizzard_SharedXML/UI.xsd">

    <Script file="RDReadyCheckLootFrame.lua" />
    <Frame name="RDReadyCheckLootFrameTemplate" mixin="RDReadyCheckLootFrameMixin" virtual="true">
        <Size x="200" y="45" />
        <Layers>
            <Layer level="BACKGROUND">
                <Texture atlas="common-dropdown-bg" alpha="0.5">
                    <Color r="0.517" g="0.458" b="0.662" />
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="-10"
                            y="3" />
                        <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT"
                            x="10" y="-8" />
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="BORDER">
                <Texture atlas="common-dropdown-bg" parentKey="voteBG" alpha="0.8">
                    <Color r="0.517" g="0.458" b="0.662" />
                    <Size x="40" y="40" />
                    <Anchors>
                        <Anchor point="LEFT" y="-1" />
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <FontString inherits="GameFontNormalSmall" parentKey="voteText">
                    <Anchors>
                        <Anchor point="CENTER" relativeKey="$parent.voteBG" y="2" />
                    </Anchors>
                    <Size x="50" y="50" />
                </FontString>
                <FontString inherits="GameFontNormalTiny" parentKey="noteText" maxLines="3"
                    justifyH="LEFT" justifyV="MIDDLE" enableMouse="true">
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT"
                            relativeKey="$parent.voteBG"
                            y="2" />
                        <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" x="-20" y="-2" />
                    </Anchors>
                    <Size x="60" y="60" />
                    <Scripts>
                        <OnEnter>
                            if not self:IsTruncated() then return end
                            GameTooltip:SetOwner(self, "ANCHOR_TOPRIGHT")
                            GameTooltip:SetText(self:GetText(), 1, 1, 1, 1, true)
                            GameTooltip:Show()
                        </OnEnter>
                        <OnLeave>
                            GameTooltip:Hide()
                        </OnLeave>
                    </Scripts>
                </FontString>
            </Layer>
        </Layers>
    </Frame>
</Ui>
